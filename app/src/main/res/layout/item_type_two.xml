<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TextView
        android:id="@+id/tv_item_type_two_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/title_geshi"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_item_type_two_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            style="@style/image_geshi"
            />

        <ImageView
            android:id="@+id/iv_item_type_two_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            style="@style/image_geshi"
            />

        <ImageView
            android:id="@+id/iv_item_type_two_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            style="@style/image_geshi"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_item_type_two_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_geshi"
            />
        <TextView
            android:id="@+id/tv_item_type_two_ptime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_geshi"
            />
    </LinearLayout>
</LinearLayout>