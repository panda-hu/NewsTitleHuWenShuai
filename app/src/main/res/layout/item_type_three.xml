<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_item_type_three_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/title_geshi"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:id="@+id/tv_item_type_three_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_geshi"
                />
            <TextView
                android:id="@+id/tv_item_type_three_ptime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_geshi"
                />
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_item_type_three"
        android:layout_width="100dp"
        android:layout_height="100dp"
        style="@style/image_geshi"
        />
</LinearLayout>